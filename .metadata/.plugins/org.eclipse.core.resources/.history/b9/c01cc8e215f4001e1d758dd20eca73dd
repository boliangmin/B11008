* 文件名称: hal_board.h
* 文件描述: i2c驱动相关封装函数
* 维护人员: bo.liangmin
* 版本信息: 20240406--代码创建
******************************************************************************************************************************************************************/



#ifndef _HAL_I2C_H_
#define _HAL_I2C_H_



/******************************************************************************************************************************************************************
* include
******************************************************************************************************************************************************************/
#include <stdio.h>
#include "esp_err.h"



/******************************************************************************************************************************************************************
* define
******************************************************************************************************************************************************************/



/******************************************************************************************************************************
* 函数名称: void AHT_DeviceInit(void)
* 函数说明: 设备初始化
* 输入参数: 无
* 输出参数: 无
* 返回数值: 无
******************************************************************************************************************************/
esp_err_t HAL_I2C_Init(void);

/******************************************************************************************************************************
* 函数名称: esp_err_t HAL_I2C_WriteCommand(uint8_t* command)
* 函数说明: 向I2C设备写指令
* 输入参数: 无
* 输出参数: 无
* 返回数值: 无
******************************************************************************************************************************/
esp_err_t HAL_I2C_WriteCommand(uint8_t device_addr, uint8_t* command);

/******************************************************************************************************************************
* 函数名称: esp_err_t HAL_I2C_ReadData(uint8_t device_addr, uint8_t* read_buff, uint16_t len)
* 函数说明: 从I2C设备读数据
* 输入参数: 无
* 输出参数: 无
* 返回数值: 无
******************************************************************************************************************************/
esp_err_t HAL_I2C_ReadData(uint8_t device_addr, uint8_t* read_buff, uint16_t len);



#endif



/******************************************************************************************************************************************************************
* end
******************************************************************************************************************************************************************/


